{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
        "build": {
            "outputs": ["build/**"],
            "dependsOn": ["^build"]
        },
        "build:app": {
            "outputs": [".build/**"],
            "dependsOn": ["^build"]
        },
        "test": {
            "dependsOn": ["^build"]
        },
        "lint": {
            "dependsOn": ["format"]
        },
        "validate": {
            "dependsOn": ["build:app"]
        },
        "audit": {},
        "format": {}
    }
}
